{
  "name": "GPT Explain (Selection)",
  "description": "Right-click selected text to ask GPT: what is xxx.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"] ,
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
